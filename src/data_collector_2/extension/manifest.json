{
  "name": "PHQ9 Privacy-Aware Usage Collector",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "PHQ9 Collector"
  }
}